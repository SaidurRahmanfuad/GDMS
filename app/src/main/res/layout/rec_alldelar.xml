<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="?attr/actionBarSize"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginTop="@dimen/_100sdp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:visibility="visible"
                android:backgroundTint="@color/theme_blue_color"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardElevation="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="vertical">



                    <LinearLayout
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="vertical"
                        >


                        <TextView
                            android:id="@+id/alldelarCurlocationId"
                            android:elevation="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="মাদারীপুর,ঢাকা"
                            android:textColor="@color/white"
                            android:textSize="18sp"
                           >

                        </TextView>

                        <TextView
                            android:id="@+id/alldelarNameId"
                            android:elevation="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="আলম পাটোয়ারী"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                          >

                        </TextView>

                        <TextView
                            android:id="@+id/alldelarStoreId"
                            android:elevation="@dimen/_5sdp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="আলোম স্টোর"
                            android:textColor="@color/white"
                            android:textSize="16sp"
                           >

                        </TextView>



                        <LinearLayout
                            android:elevation="@dimen/_10sdp"
                            android:layout_margin="@dimen/_5sdp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <Button
                                android:id="@+id/alldelarMapId"
                                android:layout_weight="1"
                                android:text="ম্যাপে দেখুন"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textColor="@color/white"
                                android:textAllCaps="false"
                                android:drawableStart="@drawable/ic_location_on_24"
                                android:drawableTint="@color/white"
                                android:backgroundTint="@color/theme_red_color"/>
                            <Button

                                android:id="@+id/alldelarCallId"
                                android:layout_weight="1"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:backgroundTint="@color/theme_green_color"
                                android:drawableLeft="@drawable/ic_call"
                                android:drawableTint="@color/white"
                                android:text="কল করুন"
                                android:textColor="@color/white"
                                android:textAllCaps="false"/>
                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>


        </LinearLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="@dimen/_10sdp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="@dimen/_80sdp"
            android:layout_marginTop="52dp"
            android:layout_marginEnd="@dimen/_80sdp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/alldelarImgId"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:layout_centerInParent="true"
                android:elevation="10dp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/me">

            </de.hdodenhof.circleimageview.CircleImageView>
        </RelativeLayout>



    </RelativeLayout>



</LinearLayout>
