<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="5dp"
    android:elevation="10dp">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_weight="4"
            android:id="@+id/rec_productImgId"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:src="@drawable/ic_user_circle_24"
            />
        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/rec_locationId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Dhaka,Bangladesh"
                android:singleLine="true"
                android:drawableLeft="@drawable/ic_dashboard_black_24dp"/>
            <TextView
                android:id="@+id/rec_shopnameId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MyShop"
                android:drawableLeft="@drawable/ic_dashboard_black_24dp"/>

            <TextView
                android:id="@+id/rec_shopOwnerId"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Abul Mea"
                android:drawableLeft="@drawable/ic_dashboard_black_24dp"/>

        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_gravity="end"
        android:gravity="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</androidx.cardview.widget.CardView>